<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:tool="http://schemas.android.com/tools">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:padding="8dp"        android:id="@+id/txtCallerName"        tool:text="Name"        />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/txtCallerName"        android:textColor="#979998"        android:padding="8dp"        android:id="@+id/txtCallerPhoneNumber"        tool:text="xxxxxxx"        />    <TextView        android:id="@+id/txtCallDate"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentEnd="true"        android:layout_centerVertical="true"        android:padding="5dp"        tool:text="12/34/1994"/></RelativeLayout>