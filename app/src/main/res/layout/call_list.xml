<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent" android:layout_height="match_parent">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="10dp"        android:id="@+id/txtCallerName"        />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/txtCallerName"        android:textColor="#979998"        android:padding="8dp"        android:id="@+id/txtCallerPhoneNumber"        />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentEnd="true"        android:layout_below="@+id/txtCallerName"        android:padding="5dp"        android:layout_toEndOf="@+id/txtCallerPhoneNumber"        android:id="@+id/txtCallDate"        /></RelativeLayout>